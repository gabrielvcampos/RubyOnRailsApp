<%= form_with(model: contact, local: true, class: 'basic-grey') do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Novo Contato</h1>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= form.collection_select(:kind_id, @kinds_select, :id, :description)%>
  </div>

  
  <%= fields_for @contact.address do |address_fields| %>
    <div class="field"> 
        <%= address_fields.label :street %>
        <%= address_fields.text_field :street %>
    </div>
    <div class="field"> 
        <%= address_fields.label :city %>
        <%= address_fields.text_field :city %>
    </div>
    <div class="field"> 
        <%= address_fields.label :state %>
        <%= address_fields.select(:state, options_for_select([["Bahia", "BA"], ["SÃ£o Paulo", "SP"]])) %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", :class => "button" %>
    <%= link_to 'Back', contacts_path, :class => "button" %>
  </div>

<% end %>
